<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></p>
    <p><%= link_to 'Delete', delete_task_path(task),
    data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this task?' }%></p></li>
  <% end %>
</ul>

<p><%= link_to 'Create a new task', new_task_path %></p>
