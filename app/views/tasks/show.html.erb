<h1><%= @task.title %></h1>

<div>
  <p><%= @task.details %></p>
</div>

<div>
  <p><%= if @task.completed == true
            'This task is completed'
        else
            'This task is not completed yet'
        end %></p>
</div>

<p><%= link_to 'Edit this task', edit_task_path%></p>
<p><%= link_to 'Back to list', tasks_path %></p>
